{
  "manifest_version": 3,
  "name": "Salesforce Case Autofiller",
  "version": "1.0",
  "description": "Harvey Chandler - Autofill Salesforce cases with predefined templates. Old salesforce",
  "action": {
    "default_title": "Autofill Case"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_idle"
  }],
  "icons": {
    "256": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.salesforce.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}